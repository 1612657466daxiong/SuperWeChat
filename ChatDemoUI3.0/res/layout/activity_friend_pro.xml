<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/layout_frend_title" layout="@layout/view_layout_title"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <ImageView
            android:id="@+id/iv_friend_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dip"
            android:scaleType="centerCrop"
            android:src="@drawable/em_default_avatar"
            />
        <TextView
            android:id="@+id/tv_friend_nick"
            android:layout_toRightOf="@id/iv_friend_avatar"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="nick"
            />
        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_toRightOf="@id/iv_friend_avatar"
            android:textSize="20dp"
            android:layout_below="@id/tv_friend_nick"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_friend_beizhu"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置备注和标签"
            android:layout_marginLeft="8dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_friend_area"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_friend_beizhu"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/tv_friend_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_friend_beizhu"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_friend_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_friend_area"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_friend_qianming"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp" />
        <TextView
            android:layout_toRightOf="@id/tv_friend_qianming"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/bt_friend_addcontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加到通讯录"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg_green"
        android:textColor="@color/white"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/bt_friend_sendmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发消息"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg_green"
        android:textColor="@color/white"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/bt_friend_shiping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="视频聊天"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:visibility="gone"
        />

</LinearLayout>