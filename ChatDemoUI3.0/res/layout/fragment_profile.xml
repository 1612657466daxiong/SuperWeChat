<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.ucai.superwechat.ui.ProfileFragment"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/layout_profile"
                android:background="@drawable/setting_item_selector">
                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/default_avatar"/>
                <TextView
                    android:id="@+id/tvNick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivAvatar"
                    android:text="昵称"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信号："
                    android:layout_toRightOf="@+id/ivAvatar"
                    android:layout_below="@id/tvNick"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"/>
            </RelativeLayout>
                <TextView
                    android:id="@+id/tvPhotos"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="相册"
                    android:textSize="18dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/setting_item_selector"
                    android:drawableLeft="@drawable/icon_me_photo"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tvCollect"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="收藏"
                android:textSize="18dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_me_collect"
                android:gravity="center_vertical"
                android:background="@drawable/setting_item_selector"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/setting_item_selector"
                android:text="钱包"
                android:textSize="18dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_me_money"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tvExpression"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="表情"
                android:textSize="18dp"
                android:drawablePadding="10dp"
                android:background="@drawable/setting_item_selector"
                android:drawableLeft="@drawable/icon_me_smail"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tvSetting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="设置"
                android:textSize="18dp"
                android:drawablePadding="10dp"
                android:background="@drawable/setting_item_selector"
                android:drawableLeft="@drawable/icon_me_setting"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    </LinearLayout>
    </ScrollView>


</LinearLayout>
